<!doctype html>
<html{{#if locale}} lang="{{locale}}"{{/if}}>
  <head>
    <title>{{title}} | {{name}}</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    {{#if description}}
      {{!-- Meta description --}}
      <meta name="description" content="{{description}}" />
    {{/if}}

    {{#if keywords}}
      {{!-- Meta keywords --}}
      <meta name="keywords" content="{{#each keywords}}{{.}}{{#unless @last}},{{/unless}}{{/each}}" />
    {{/if}}

    {{!-- Handheld support --}}
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=0" />

    {{!-- Desktop support only --}}
    {{!-- <meta content="width=1024, initial-scale=1" name="viewport" /> --}}

    {{!-- CSS includes --}}
    <link rel="stylesheet" href="./css/app.css?v={{timestamp}}" />
  </head>
  <body class="{{#if classes}}{{#each classes}}{{.}}{{#unless @last}} {{/unless}}{{/each}}{{/if}}">
    <div class="container">
      {{> header }}
      <main class="main">
        {{#if filters}}
          <aside class="sidebar">
            {{> filters }}
          </aside>
        {{/if}}
        <div class="content">
          {% body %}
        </div>
      </main>
      {{> footer }}
    </div>
    {{#if modal}}
      {{> modal }}
    {{/if}}
    <div id="scripts">
      {{!-- Script includes --}}
      <script src="./js/common.js?v={{timestamp}}"></script>
      <script src="./js/app.js?v={{timestamp}}"></script>
    </div>
  </body>
</html>
