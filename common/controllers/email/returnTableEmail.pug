-
	var cleanNums = function( num )
	{
		if( !num || num === '' ) return 0;
	    return parseFloat( num.toString().split("$").join('').toString().split(',').join('') );
	}

-
	var formatNum = function( num )
	{
		return num.toFixed(2).replace(/./g, function( c, i, a ) {
			return i > 0 && c !== "." && (a.length - i) % 3 === 0 ? "," + c : c;
		});
	}


