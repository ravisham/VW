//- Here is the genneral structure of the email
+table()
	tr
		td(class="pattern" width="640" align="center")
			+table()
				+logo(order)
				if message
					+messaging(message)
				- var index = 0
				each item, key in order.sale_items
					- index++
					+saleItemRow(item, key, index)
				if( !isDTCUser )
					+paymentCharges(order)
				tr
					td(cellpadding="10", style="padding: 10px;")
				+footer
